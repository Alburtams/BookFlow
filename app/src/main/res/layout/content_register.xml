<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hust.bookflow.activity.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/stuid"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/pwd"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/stuid">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="99dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.design.widget.TextInputLayout>

    <!--<TextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        app:layout_constraintRight_toLeftOf="@+id/name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintHorizontal_bias="0.65"
        android:layout_marginStart="8dp" />-->

    <EditText
        android:id="@+id/stuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="StudentID"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginLeft="99dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="99dp" />

    <TextView
        android:id="@+id/stuid_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学号"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/name_txt"
        app:layout_constraintRight_toLeftOf="@+id/stuid"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.788"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="11dp" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/stuid"
        android:layout_marginLeft="99dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="99dp" />

    <TextView
        android:id="@+id/pwd_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        app:layout_constraintRight_toLeftOf="@+id/pwd"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.745"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/stuid_txt"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/repeat_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/pwd"
        android:layout_marginLeft="99dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="99dp" />

    <TextView
        android:id="@+id/re_pwd_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="再次输入密码"
        app:layout_constraintRight_toLeftOf="@+id/repeat_pwd"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/pwd_txt"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="\@email"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/repeat_pwd"
        android:layout_marginLeft="99dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="99dp" />

    <TextView
        android:id="@+id/email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电子邮箱"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/re_pwd_txt"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/email"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.44"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginLeft="162dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="162dp" />

</android.support.constraint.ConstraintLayout>
